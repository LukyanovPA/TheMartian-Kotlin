<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.pavellukyanov.themartian.ui.main.mainpage.MainFragment"
        android:label="MainFragment" >
        <action
            android:id="@+id/action_mainFragment_to_fragmentPager"
            app:destination="@id/fragmentPager" />
    </fragment>
    <fragment
        android:id="@+id/fragmentPager"
        android:name="com.pavellukyanov.themartian.ui.main.gallery.FragmentGallery"
        android:label="fragment_pager"
        tools:layout="@layout/fragment_gallery" >
        <argument
            android:name="roverInfo"
            app:argType="com.pavellukyanov.themartian.domain.rover_info.RoverInfo" />
    </fragment>
</navigation>